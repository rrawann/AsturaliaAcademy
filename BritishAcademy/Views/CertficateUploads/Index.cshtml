    ViewData["Title"] = "Index";
}

    <div class="container">
        <p>
            <h2 style="text-align:left;color:saddlebrown;">
                CERTFICATES|

                <a class="btn btn-dark" style="background-color:saddlebrown;" asp-area="" asp-controller="CertficateUploads" asp-action="Create">Upload </a>
