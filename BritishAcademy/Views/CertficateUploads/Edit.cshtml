
@model CertficateUpload
<form method="post" asp-controller="CertficateUploads" asp-action="Edit" enctype="multipart/form-data">
    <input type="file" name="files" multiple required />
    <input type="text" autocomplete="off" placeholder="Enter File Description" name="description" required />
    <div class="form-group">

        <select asp-for="CourseID" class="form-control" asp-items="ViewBag.CourseID"></select>
    </div>
    <div class="form-group">

        <select asp-for="ApplicationUserId" class="form-control" asp-items="ViewBag.ApplicationUserId"></select>
    </div>

    <button class="btn btn-success" type="submit">update</button>
</form>
















