                            <label class="sr-only"></label>
                            <input type="text" class="form-control" name="UserName" placeholder="User Name">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-dark" style="background-color:saddlebrown;margin-right:5px;">
                                Search
                            </button>
                            <a href="@Url.Action("index")" class="btn btn-dark" style="background-color:saddlebrown;">All</a>
                        </div>
                    </form>
                </p>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
