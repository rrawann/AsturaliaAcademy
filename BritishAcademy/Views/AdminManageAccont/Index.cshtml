
@{
    ViewData["Title"] = "View";
}

@model IEnumerable<BritishAcademy.Models.ApplicationUser>

    <div class="container">
        <p>
            <h2 style="text-align:left;color:saddlebrown;">
                STUDENTS |<a class="btn btn-dark" style="background-color:saddlebrown;" asp-area="" asp-controller="AdminManageAccont" asp-action="Create">New Account</a>



